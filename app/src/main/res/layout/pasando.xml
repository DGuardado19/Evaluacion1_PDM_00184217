<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Factura"
        android:textSize="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/usuarioview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/correoview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/totalprodutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de producto"
        android:textSize="20dp"
        android:gravity="center"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        >

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="#C42222"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 1"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto1view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="#991B1B"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 2"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto2view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#F1AE28"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 3"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto3view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="#22C4BF"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 4"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto4view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="#1B9967"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 5"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto5view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#28F1D3"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 6"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto6view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="#4D22C4"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 7"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto7view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="#786DCC"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 8"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto8view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#906CC2"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Producto 9"
                android:textSize="@dimen/textocajass" />

            <TextView
                android:id="@+id/producto9view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:textSize="@dimen/textocajas" />

        </LinearLayout>

    </GridLayout>
    <Button
        android:id="@+id/compa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enviar"/>

</LinearLayout>